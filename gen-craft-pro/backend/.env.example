# ──────── GenCraft Pro — Backend Environment Variables ────────

# Server
NODE_ENV=development
BACKEND_PORT=4000
FRONTEND_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://gencraft:password@localhost:5432/gencraft_pro?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# JWT / Session
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=604800000

# Auth Service (maula.ai main app)
AUTH_SERVICE_URL=http://localhost:3001/api/auth

# Stripe
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=gencraft-assets
AWS_CLOUDFRONT_DISTRIBUTION=your-distribution-id
AWS_CLOUDFRONT_DOMAIN=cdn.maula.ai

# AI Providers
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Docker
DOCKER_SOCKET=/var/run/docker.sock
SANDBOX_NETWORK=gencraft-sandbox-net
SANDBOX_MEMORY_LIMIT=512m
SANDBOX_CPU_LIMIT=0.5

# Monitoring
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=info
