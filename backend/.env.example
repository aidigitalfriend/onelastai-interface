# =============================================================================
# NEURAL LINK BACKEND ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in the values

# Server Configuration
NODE_ENV=development
NEURAL_LINK_PORT=3200

# Frontend URL (for CORS and redirects)
NEURAL_LINK_FRONTEND_URL=https://maula.onelastai.co

# =============================================================================
# DATABASE - Separate PostgreSQL database for Neural Link
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/neural_link?schema=public

# =============================================================================
# AUTHENTICATION
# =============================================================================
# JWT Secret for session tokens (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here

# Subdomain token secret (shared with main One Last AI app for handoff verification)
# This MUST match the SUBDOMAIN_TOKEN_SECRET in the main app
SUBDOMAIN_TOKEN_SECRET=shared-secret-with-main-app

# =============================================================================
# AI PROVIDERS - Your own API keys for Neural Link
# =============================================================================

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (GPT-4, GPT-4o)
OPENAI_API_KEY=sk-...

# Google Gemini
GEMINI_API_KEY=AIza...

# Mistral
MISTRAL_API_KEY=...

# xAI (Grok)
XAI_API_KEY=xai-...

# Groq
GROQ_API_KEY=gsk_...

# Cerebras
CEREBRAS_API_KEY=...

# =============================================================================
# STRIPE - Same account as main app, separate products/prices
# =============================================================================
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...

# Webhook secret for Neural Link endpoint
NEURAL_LINK_STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# EMAIL (Optional - for notifications)
# =============================================================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=SG...
EMAIL_FROM=noreply@onelastai.co

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379/1

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
